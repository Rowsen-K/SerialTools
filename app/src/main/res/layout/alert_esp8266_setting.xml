<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="ESP8266参数配置"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@color/qmui_config_color_blue"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
<TextView
    android:layout_width="50dp"
    android:layout_height="match_parent"
    android:text="SSID:"
    android:textSize="20sp"
    android:layout_margin="6dp"
    android:gravity="center"/>
        <EditText
            android:id="@+id/ssid"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:padding="3dp"
            android:hint="请输入想接入的wifi名称！"
            android:text="Rowsen-K"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1.6dp"
        android:background="@color/qmui_config_color_blue"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="密码:"
            android:textSize="20sp"
            android:layout_margin="6dp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/psw"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:hint="请输入想接入的wifi密码！"
            android:text="rzcs0608"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1.6dp"
        android:background="@color/qmui_config_color_blue"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="IP:"
            android:textSize="20sp"
            android:layout_margin="6dp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/ip"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:hint="请输入想连接终端的IP地址！"
            android:text="192.168.43.1"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1.6dp"
        android:background="@color/qmui_config_color_blue"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="端口:"
            android:textSize="20sp"
            android:layout_margin="6dp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/port"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:hint="请输入想接入的IP端口！"
            android:text="9000"/>
    </LinearLayout>
</LinearLayout>