<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="GGA语句模拟基准数据设定"
            android:textSize="26sp"
            android:gravity="center"
            android:background="@color/qmui_config_color_blue"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:layout_width="66dp"
            android:layout_height="44dp"
            android:layout_margin="6dp"
            android:gravity="center"
            android:text="纬度："
            android:textSize="20sp" />
        <EditText
            android:id="@+id/para1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="请输入想接入的wifi名称！"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1.6dp"
        android:background="@color/qmui_config_color_blue"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:gravity="center"
            android:text="经度："
            android:textSize="20sp" />
        <EditText
            android:id="@+id/para2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="请输入想接入的wifi密码！"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1.6dp"
        android:background="@color/qmui_config_color_blue"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:layout_width="66dp"
            android:layout_height="wrap_content"
            android:layout_margin="6dp"
            android:gravity="center"
            android:text="速度："
            android:textSize="20sp" />
        <EditText
            android:id="@+id/para3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="请输入想连接终端的IP地址！"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1.6dp"
        android:background="@color/qmui_config_color_blue"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:text="时间："
            android:textSize="20sp"
            android:layout_margin="6dp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/para4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="请输入想接入的IP端口！"/>
    </LinearLayout>
</LinearLayout>